  // 13. [M] Phí dỡ hàng (RMB) - NEW
  unloadingFeeRMB      Decimal?  @db.Decimal(15, 2) // NUMBER

  // 14. [L2] Đơn giá cước vận chuyển TQ_HN (Theo Kg)
  weightFee            Decimal?  @db.Decimal(15, 2) // NUMBER

  // 15. [L1] Đơn giá cước vận chuyển TQ_HN (Theo m3) - NEW
  volumeFee            Decimal?  @db.Decimal(15, 2) // NUMBER

  // 16. [P] Tổng cước vận chuyển TQ_HN tạm tính
  totalTransportFeeEstimate Decimal? @db.Decimal(15, 2) // FORMULA

  // 17. [Q] Ghi chú
  notes                String?   // STRING

  // 18. [R] Ảnh hàng hóa 1
  // 19. [S] Ảnh hàng hóa 2
  images               String[]  // Array of strings

  // 20. [T] Tem chính
  mainTag              String?   // STRING

  // 21. [U] Tem phụ
  subTag               String?   // STRING

  // 22. [V] Xác nhận của PCT - NEW
  pctConfirmation      String?   // STRING

  // 23. [W] Số Lượng sản phẩm
  productQuantity      Decimal?  @db.Decimal(15, 2) // NUMBER
  productUnit          String?   // STRING

  // 24. [X] Quy cách
  specification        String?   // STRING

  // 25. [Y] Mô Tả sản phẩm
  productDescription   String?   // STRING

  // 26. [Z] Nhãn Hiệu
  brand                String?   // STRING

  // 27. [AA] Mã Số Thuế đơn vị bán hàng
  supplierTaxCode      String?   // STRING

  // 28. [AB] Tên Công Ty bán hàng
  supplierName         String?   // STRING

  // 29. [AC] Nhu cầu khai báo
  declarationNeed      String?   // STRING

  // 30. [AD] Chính sách khai báo
  declarationPolicy    String?   // STRING

  // 31. [AE] Số lượng khai báo
  declarationQuantity  Decimal?  @db.Decimal(15, 2) // NUMBER

  // 32. [AF] Giá xuất hoá đơn ( trước VAT )
